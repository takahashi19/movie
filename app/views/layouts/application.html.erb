      <!--  </div>-->
      <!--  <button class="btn btn-primary">検索</button>-->
      <!--</form>-->
    </div>
  </div>
</nav>





    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>


<%= yield %>
    
