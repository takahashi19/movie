<h3>最新情報</h3>
<div class="well" style="font-size: 15px;">
   <%@newss.each do |n|%>
  <p><%=n.news%></p>
  <% end %>
  <div>
 </div>
</div>


<div class="row">
<% @movies.each do |movie| %>

  <div class="col-xs-12 col-md-4 text-center">
    <div class="thumbnail">
      <h2>第<%= movie.id %>位</h2>
      <% if movie.star %>
         
        <div class="star-rating-icon">
        <span>評価：</span>
        <% if movie.star >= 5 %>
          <span class="rate rate5"></span>
        <% elsif movie.star >= 4 %>
          <span class="rate rate4"></span>
        <% elsif movie.star >= 3 %>
           <span class="rate rate3"></span>
        <% elsif movie.star >= 2 %>
          <span class="rate rate2"></span>
         <% else %>
         <span class="rate rate1"></span>
      <% end %>
    </div><!--star-rating-icon-->
        <% end %>
          <%#movie.reviews.count%>
          <%# movie.reviews.each do |r|%>
          <%#if r.movie_id == movie.id %>
            <%# @test= r.hyouka%>
            <%#end%><%#end%>
      
      <%# movie.review.hyouka %>
      <h3 style="
      font-size: 25px;
  "><%= movie.movie_name %></h3>
      <img src=<%= movie.image %>>
      <div class="caption" style="font-size: 17px; height:200px;">
        <p><%= movie.synopsis %></p>
      </div>
         <%= link_to("レビューを書く", "/movies/#{movie.id}") %>
   </div>
  </div>
<% end %>
<%= paginate @movies %>
</div>
  
</div>        <!-- 全体を囲むコンテナ -->




